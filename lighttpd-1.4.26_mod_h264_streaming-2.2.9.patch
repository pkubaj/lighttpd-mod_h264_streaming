+static unsigned char* atom_writer_unknown(unknown_atom_t* atoms,
+                                          unsigned char* buffer)
+{
+  while(atoms)
+  {
+    size_t size = read_32((const unsigned char*)atoms->atom_);
+    memcpy(buffer, atoms->atom_, size);
+    buffer += size;
+    atoms = atoms->next_;
+  }
+
+  return buffer;
+}

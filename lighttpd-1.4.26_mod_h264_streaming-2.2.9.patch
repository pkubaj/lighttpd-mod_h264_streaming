+static int mp4_read_desc_len(unsigned char** buffer)
+{
+  uint32_t len = 0;
+  unsigned int bytes = 0;
+  for(;;)
+  {
+    unsigned int c = read_8(*buffer + bytes);
+    len <<= 7;
+    len |= (c & 0x7f);
+    if(++bytes == 4)
+      break;
+    if(!(c & 0x80))
+      break;
+  }
+
+  *buffer += bytes;
+
+  return len;
+}
